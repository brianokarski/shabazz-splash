font-size = 20px
font = font-size Helvetica
lineHeight = 28px
lineHeight2 = 27px
letterSpacing = .02em
opacityOut = opacity .25s ease-out
transitionAll = all .25s
transitionOut = all .15s ease-out
transformScale = translateZ(1) scale(1.0, 1.0)
textColor = #000
fittyPer = 50%
translateFitty = translate(-50%, -50%)
hoverColor = #fff
menuWidth = 500px
imgResize = 85%
transition(n)
  -webkit-transition n
  -moz-transition n
  -o-transition n
  transition n
transform(n)
  -webkit-transform n
  -moz-transform n
  -o-transform n
  transform n
transformDeg = rotate(0deg)
transformOrigin(n)
  -webkit-transform-origin n
  -moz-transform-origin n
  -o-transform-origin n
  transform-origin n
transformPerc = 25% 0%
backFace(n)
  backface-visibility n
  -webkit-backface-visibility n

hawlinBg = yellow
jazzBg = white
segaBg = pink
navsegdaBg = grey
ballBg = beige




html
  background-color #ff0918

body
  font font sans-serif
  line-height  lineHeight
  letter-spacing  letterSpacing

.mobile-pub
  display  none

#sp-logo img
  width  80px
  float  left
  fill  inherit

#main-ul
  padding-top  10px

li 
  display  block 
  float  left 
  margin-right  10px 
  position  relative 
  padding-right  0.5em 
  line-height lineHeight2

#main-ul > li:hover > #sp-ul
#main-ul > li:hover > #pub-ul
  opacity 1
  height auto
  overflow visible
  transition opacityOut

a
  color textColor
  text-decoration none

.sp-li
  margin-left 15px

.shabazz-intro
  position absolute
  top 0px
  left 0px
  width menuWidth
  a:hover
    color hoverColor
    border-bottom: 2px solid hoverColor

.pub-li
  text-align left
  float right
  margin-right 220px

#sp-ul
#pub-ul
  width menuWidth
  display  block
  transition opacityOut
  opacity  0 
  height  0
  overflow  hidden
  position absolute 
  left  0

#pub-ul
  line-height lineHeight2
  li
    padding-top lineHeight2
    line-height lineHeight2
    a
      display block

.cart
  position absolute
  top 10px
  right 15px

.cartbtn
.addcartbtn
.minicart-submit
  font font
  line-height lineHeight
  letter-spacing letterSpacing
  background none
  border none
  color black
  text-decoration none
  cursor pointer
  box-shadow 0px
  padding 0px
  margin 0px
  border 0px
  &:focus
  /button:focus
    box-shadow 0px
    padding 0px
    margin 0px
    border 0px
    outline none

.addtocart
  display inline
  margin-left 10px

.carttwo
#info
  position absolute
  bottom 15px
  left 15px

.sp-intro
  margin-top -(lineHeight)


.sp-intro a
.udln
form.addtocart
.shabazz-intro a
.minicart-submit
  border-bottom 2px solid textColor


p.first
  text-indent 165px

p
  margin-bottom lineHeight

.link-title
  position relative
  z-index 100
  &:after
    position absolute
    margin-left 9px
    float right
    content "+"
    width 25px
    height 15px
    opacity 1
    transform transformDeg
    transformOrigin transformPerc
    transition transitionAll
    backFace hidden
    transform transformScale

#main-ul > li:hover > .link-title:after
    opacity 0

#main-ul > .pub-li:hover > .link-title:after
    margin-left 20px
    opacity 1
    transform rotate(45deg)
    transformOrigin 0px 0px
    transition transitionAll
    transform transformScale

.booktitle
    display block

#img-container 
  img
    position absolute
    max-width imgResize
    max-height imgResize
    top 10%
    left 10%
    z-index -400
    &:empty
      top fittyPer
      left fittyPer
      transform translateFitty
      transform transformScale

.imgdisplay
  display visible

#library
  &:hover
