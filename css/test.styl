/* sp (portrait) ----------- */
@media only screen and (max-width : 320px) {

    html{
        background-color: #ff0918;
    }

    body {
        font-family: Helvetica, sans-serif;
        font-size: 20px;
        line-height: 28px;
        letter-spacing: .02em;
    }

    #main-ul {
        padding-top: 3px;
    }

    .sp-li {
        margin-left: 5px;
    }

    .shabazz-intro {
        position: static;
        float: left;
        width: 310px;
    }

    .pub-li, .cart{
        display: none;
    }

    .mobile-pub{
        margin-top: 28px;
        display: block;
        float: left;
        margin-left: 5px;
        width: 310px;
    }

    .mob-blade{
        margin: 28px 0px;
        text-align: center;
    }

    .slide-mob img{
        width: 100%;
    }



}
