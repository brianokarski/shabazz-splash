/*   minicart   */

#PPMiniCart 
  display: none;
  position: fixed;
  top: fittyPer
  left: fittyPer
  transform translateFitty
  z-index: 350;
  .minicart-title
    float left
    margin -10px -10px 0
    padding 10px
    background 0
    border 0
    font-size 20px
    cursor pointer
    position absolute
    top 12px
  .minicart-showing &
    display block
    top fittyPer
    left fittyPer
    backFace hidden
    transform translateFitty
  form
    position relative
    width 600px
    max-height 400px
    margin-left 0px
    padding 10px 10px 40px 
    background hoverColor
    border 0px
    border-radius 0px
    box-shadow 0px 0px 0px rgba(0, 0, 0, 0)
    font font
    color #000
  form.minicart-empty
    padding-bottom 10px
    font font
  ul
    clear left
    margin 50px 0px 21px 0px
    list-style-type none
    background textColor
    border 0px
    border-radius 0px
    box-shadow 0px 0px 0px rgba(0, 0, 0, 0)
  .minicart-empty ul
    display none
  .minicart-closer
    float right
    margin -12px -10px 0 
    padding 10px 
    background 0
    border 0
    font font
    cursor pointer
  .minicart-item
    position relative
    padding 3px 0
    min-height 17px
    float none
    font-size 20px
    line-height 7px
    a
      position absolute
      top 11px
      left 0
      width 350px
      color #333
      line-height 12px
      text-decoration none
  .minicart-attributes
    margin 18px 0 0
    padding 0
    border 0
    border-radius 0
    box-shadow none
    color #999
    font-size 12px
    line-height 22px
    li
      display inline
      &:after
        content ","
    li:last-child:after
      content ""
  .minicart-quantity
    position absolute
    top -4px
    left 430px
    width 24px
    height 21px
    padding 0px 4px
    font-size 19px
    text-align right
    transition border linear 0.2s, box-shadow linear 0.2s
    -webkit-transition border linear 0.2s, box-shadow linear 0.2s
    -moz-transition border linear 0.2s, box-shadow linear 0.2s
    &:hover
      border-color #0078C1
    &:focus
      border-color #0078C1
      outline 0
      box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 3px rgba(0, 120, 193, 0.4)
  .minicart-remove
    position absolute
    top -7px
    left 462px
    width 18px
    height 23px
    margin 0
    padding 0
    background #fff
    border 1px solid #fff
    color red
    font-size 20px
    opacity 1
    cursor pointer
    &:hover
      opacity .5
  .minicart-price
    position absolute
    top 3px
    right 0
  .minicart-subtotal
    position absolute
    bottom 17px
    left 10px
    font-size 20px
    color red
  .minicart-submit
    position absolute
    bottom 12px
    right 10px
    cursor pointer
    img
      vertical-align middle
      padding 4px 0 0 2px

/*MEDIA QUERIES*/

/* breakpoint 1 */

@media screen and (max-width: 880px) {

    html{
        background-color: #e6000e;
    }

}


/* breakpoint 2 */

@media screen and (max-width: 768px) {

    html{
        background-color: #c4000c;
    }

}

/* breakpoint 3 */


@media (max-width: 500px) and (min-width: 0px) {

    html{
        background-color: #a2000a;
    }

}

/* ipad */

@media only screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait) {

    html{
        background-color: #800008;
    }

}

@media only screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape) {

    html{
        background-color: #5e0006;
    }

}


